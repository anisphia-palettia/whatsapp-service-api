generator client {
  provider = "prisma-client-js"
  output   = "./generated"
}

generator zod {
  provider = "zod-prisma-types"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Session {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  name      String   @unique
  isActive  Boolean  @default(false)
  createdAt DateTime @default(now())
  clientKey String   @unique @default(uuid())

  chatMessages ChatMessage[]
  chats        Chat[]

  @@map("sessions")
}

model Chat {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  waId      String   @unique
  chatId    String   @unique
  name      String?
  isGroup   Boolean  @default(false)
  createdAt DateTime @default(now())

  sessionId String
  session   Session @relation(fields: [sessionId], references: [id])

  messages ChatMessage[]

  @@map("chats")
}

model ChatMessage {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  chatId    String
  senderId  String
  fromMe    Boolean
  message   String?
  type      String
  timestamp DateTime

  mediaUrl  String?
  mediaType String?
  mediaSize Int?

  sessionId String
  session   Session? @relation(fields: [sessionId], references: [id])

  chat Chat? @relation(fields: [chatId], references: [chatId])

  @@index([chatId])
  @@map("chat_messages")
}
